<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
        android:autoMirrored="false">
    <item
            android:bottom="18dp"
            android:top="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="#4B4949" />
            <size
                    android:width="200dp"
                    android:height="200dp" />
        </shape>
    </item>

    <item
            android:bottom="-120dp"
            android:left="50dp"
            android:right="-80dp"
            android:top="20dp">
        <rotate android:fromDegrees="45">

            <shape android:shape="rectangle">
                <solid android:color="#131212" />
                <!--
                <size
                        android:width="100dp"
                        android:height="100dp"/>-->
            </shape>
        </rotate>
    </item>
</layer-list>
