<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <size
                    android:width="8dp"
                    android:height="4dp" />
            <solid android:color="#d8d8d8" />
        </shape>
    </item>
    <item
            android:bottom="1px"
            android:right="1px">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <size
                    android:width="8dp"
                    android:height="4dp" />
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</layer-list>